{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["ui/**/*.ts,ui/**/*.tsx"],
  "exclude": ["node_modules"]
}
